<section class="get-prepped-section view">
  <form action="/submit-prep" method="POST" class="get-prepped__form">
    <fieldset class="get-prepped__field">
        <legend>Get Prepped</legend>
            <label for="name" class="get-prepped-section__label">
                Prep Name
                <input required type="text" name="name" class="get-prepped-section__input" id="get-prepped-name">
            </label>
            <label for="type" class="get-prepped-section__label">
                Type
                <select required name="type" id="get-prepped-type">
                    <option value="Skill">Skill</option>
                    <option value="Tip">Tip</option>
                    <option value="Item">Item</option>
                </select>
            </label>
            <label for="description" class="get-prepped-section__label">
                Description
                <input required type="text" name="description" class="get-prepped-section__input" id="get-prepped-description">
            </label>
            <label for="image" class="get-prepped-section__label">
                Choose your image
                 <input type="url" name="image" class="get-prepped-section__input" id="get-prepped-image">
            </label>
            <label for="apocalypse" class="get-prepped-section__label">
                Apocalypse
                <select class="get-prepped__select" required name="apocalypse">
                    {{#each apocalypses}}
                        <option value={{this}}>{{capitalise this}}</option>
                    {{/each}}
                </select>
            </label>
            <input type="submit" class="get-prepped-section__submit">
    </fieldset>
        </form>
</section>
